<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.SelectRegionActivity">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        app:chipSpacingHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        app:singleSelection="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/chip_gangneung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강릉"
            android:textSize="16sp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/chip_donghae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동해"
            android:textSize="16sp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/chip_sokcho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="속초"
            android:textSize="16sp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/chip_chuncheon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="춘천"
            android:textSize="16sp"/>

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/btn_selectregion_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>